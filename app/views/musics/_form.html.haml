= f.file_field :image
= f.file_field :document
= f.file_field :audio
= form_for(@music) do |f|
  - if @music.errors.any?
    #error_explanation
      %h2
        = pluralize(@music.errors.count, "error")
        prohibited this music from being saved:
      %ul
        - @music.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .field
    = f.label :document
    %br/
    = f.text_field :document
  .field
    = f.label :audio
    %br/
    = f.text_field :audio
  .actions
    = f.submit
    